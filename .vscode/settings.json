  ],

  "files.associations": {
    "*.css": "tailwindcss"
  },

  "javascript.preferences.importModuleSpecifier": "non-relative",

  "prisma.fileWatcher": true,
  "prisma.format.enabled": true,

  "[typescript]": {
    "editor.suggest.showTypeParameters": true
  },
  "[typescriptreact]": {
  },
  "[javascript]": {
  },
  "[javascriptreact]": {
  },
  "[prisma]": {
    "editor.formatOnSave": true
