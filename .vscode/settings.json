  "files.autoSave": "afterDelay",

  // ğŸ—‚ï¸ æ’é™¤ä¸å¿…è¦çš„è³‡æ–™å¤¾
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
