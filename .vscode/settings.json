    "**/node_modules/**": true
  },
  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/.prisma": true
  },

  // ğŸ”’ TypeScript åš´æ ¼æ¨¡å¼
  "typescript.strict": true,

  // âœ¨ JavaScript è‡ªå‹•åŒ¯å…¥å»ºè­°
  "javascript.suggest.autoImports": true,

  // ğŸ¤– GitHub Copilot è¨­å®š
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true,
    "prisma": true
  },

  // ğŸ” IntelliSense å»ºè­°ç²¾ç°¡
  "editor.suggest.showWords": false,
